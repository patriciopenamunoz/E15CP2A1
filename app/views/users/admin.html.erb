<h1>Admin panel</h1>
<table class="table">
  <thead>
    <th>Username</th>
    <th>Email</th>
    <th>Is admin?</th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.admin ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to user.admin ? 'Revoke admin' : 'Grant admin',
                    def_admin_path(user), method: :post,
                    class: 'btn ' + (user.admin ? 'btn-danger' : 'btn-primary') %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
